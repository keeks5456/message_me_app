<div>
<h1>Welcome To MessageMe - <em>a complete Chat App</em></h1>
    <i class="comment circular alternate outline large blue icon"></i>
    <p>Login to chat</p>
</div>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <%= form_with(model: @session, local: true, url: login_path) do |form| %>
        <div class="field">
          <%= form.label :username, "Username" %>
          <div class="ui left icon input">
            <%= form.text_field :username, placeholder: 'Username' %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= form.label :password, "Password" %>
          <div class="ui left icon input">
            <%= form.password_field :password, placeholder: 'Password' %>
            <i class="lock icon"></i>
          </div>
        </div>
          <%= form.submit "Login", class: "ui blue submit button" %>
        <% end %>
      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>